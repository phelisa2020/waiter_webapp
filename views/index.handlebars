<div class="container">
    <div class="col s12">
        <div class="card-panel blue white-text center">Shifts for all waiters this week</div>
    </div>
    <div style="height:50px"></div>
    {{#if messages.info}}
    <div class="col s12 entry center">
        <p>{{messages.info}}</p>
    </div>
    {{/if}}
    <div style="height:50px"></div>
    
    <div class="row">
        <div class="col s12 center">
            <table >
                <tr >
                    <td class="red" style="width:60px;"></td>
                    <td>  short-staffed  -  waiters total is less than 3</td>
                </tr>
                <tr>
                    <td class="green" style="width:60px;"></td>
                    <td> good - waiters total is equal to 3</td>
                </tr>
                <tr>
                    <td class="orange" style="width:60px;"></td>
                    <td> overstaffed - waiters total is greater than 3</td>
                </tr>
            </table>
        </div>
    </div>
    
    <div style="height:50px"></div>
    {{#each all}}
    <ul class="collection with-header">
        <li class="collection-item {{status}}">
            <h4 class="center">{{weekday}}</h4>
        </li>
        {{#each waiters}}
        <li class="collection-item"><i class="tiny material-icons">person</i><span>{{this}}</span></li>
        {{/each}}
    </ul>
    {{/each}}
    <div style="height:50px"></div>
    <div class="row">
        <div class="col s12 center">
            <form id="reset" action="/days" method="post">
                <button class="btn btn-large blue" type="submit" form="reset">Reset Shifts</button>
            </form>
        </div>
    </div>
    
</div>
